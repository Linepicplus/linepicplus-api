# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# API Configuration
API_URL=http://localhost:3000
API_VERSION=v1

# CORS Configuration
CORS_ORIGIN=*

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key

# Database Configuration
DB_TYPE=filedb
# DB_TYPE=mongodb

# MongoDB Configuration (when DB_TYPE=mongodb)
# MONGODB_URI=mongodb://localhost:27017/linepicplus
# MONGODB_DB_NAME=linepicplus

# File Storage Configuration (when DB_TYPE=filedb)
FILE_DB_PATH=./data
UPLOAD_PATH=./uploads

# Security
JWT_SECRET=your-secret-key-change-in-production
API_KEY=your-api-key-for-basic-auth

# Limits
MAX_FILE_SIZE=10485760
# 10MB in bytes
MAX_FILES_PER_REQUEST=10

# Logging
LOG_LEVEL=info

